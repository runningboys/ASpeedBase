<resources>
    <style name="AppTheme" parent="AppUI.NoActionBar"/>

    <style name="AppTheme.Launcher">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
    </style>


    <!-- blue skin -->
    <style name="app_skin_blue" parent="AppTheme" >
        <item name="skin_app_primary_color">@color/teal_200</item>
        <item name="skin_app_window_bg_color">@color/white</item>
        <item name="skin_common_background">@color/teal_200</item>
        <item name="skin_common_title_text_color">@color/white</item>
    </style>


    <!-- dark skin -->
    <style name="app_skin_dark" parent="AppTheme">
        <item name="skin_app_primary_color">@color/black</item>
        <item name="skin_app_window_bg_color">@color/color_gray_4</item>
        <item name="skin_common_background">@color/black</item>
        <item name="skin_common_title_text_color">@color/white</item>
    </style>


    <!-- white skin -->
    <style name="app_skin_white" parent="AppTheme">
        <item name="skin_app_primary_color">@color/white</item>
        <item name="skin_app_window_bg_color">@color/white</item>
        <item name="skin_common_background">@color/white</item>
        <item name="skin_common_title_text_color">@color/black</item>
    </style>
</resources>